@model DynamicView.Models.DynamicReportListModel

@{
    ViewData["Title"] = "DynamicList";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        overflow: hidden; /* Prevents scrolling */
        display: flex;
        justify-content: center;
        background-color:antiquewhite
        /* align-items: center; */
    }

    .container {
        display: flex;
        /* align-items: center; */
        gap: 15px; /* Space between label and dropdown */
        margin-top:5px;
        background-color: antiquewhite
    }

    .form-control {
        width: 300px;
        padding: 8px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color:aquamarine
    }

    label {
        font-size: 18px;
        font-weight: bold;
    }
</style>

<div class="container">
    <label for="reportDropdown">Select Report:</label>
    <select id="reportDropdown" class="form-control" onchange="navigateToAction(this)">
        <option value="" disabled selected>Select a Report</option>
        @foreach (var item in Model.ReportList)
        {
            <option value="@item.Key">@item.Value</option>
        }
    </select>
</div>

<script>
    function navigateToAction(select) {
        var reportId = select.value;
        if (reportId) {
            window.location.href = `/DynamicData/Index/${reportId}`;
        }
    }
</script>

